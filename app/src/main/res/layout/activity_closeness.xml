<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ededed">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btnPrevCloseness"
            android:background="@drawable/prev"
            style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="친밀도"
            android:id="@+id/tvClCloseness"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="48dp"
            android:textSize="15dp"
            android:textColor="#525252" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/tvBtnClosenessOk"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:textColor="#cc202b78"
            android:padding="12dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="54.3dp"
            android:background="#b1b2c1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스케줄 등록 및 완료 내역을 바탕으로 친밀도가 산정됩니다. 일정 친밀도를 달성하면 새로운 말투와 배경 테마를 획득해 적용할 수 있습니다."
            android:id="@+id/tvClDesc"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#b1b2c1"
            android:textSize="9.5dp"
            android:lineSpacingExtra="1.3dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="101.7dp"
        android:background="#b1b2c1"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="117.2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:background="#1bbbbf"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginTop="90dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-9°"
                    android:id="@+id/tvTodayPoint"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="204" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음 보상까지"
                    android:id="@+id/tvCl1"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/tvTodayPoint"
                    android:layout_toStartOf="@+id/tvTodayPoint"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    android:alpha="204" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남았어요:-)"
                    android:id="@+id/tvCl2"
                    android:layout_alignTop="@+id/tvCl1"
                    android:layout_toRightOf="@+id/tvTodayPoint"
                    android:layout_toEndOf="@+id/tvTodayPoint"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:textColor="#ffffff"
                    android:alpha="204"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52°"
                android:id="@+id/tvTotalPoint"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="60dp"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="110dp"
            android:layout_below="@+id/relativeLayout2"
            android:background="#ffffff"
            android:layout_above="@+id/relativeLayout5"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="143dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/relativeLayout3">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:id="@+id/ivGiftBox0"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/giftbox"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:id="@+id/ivGiftBox1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/giftbox"
                android:layout_marginLeft="63dp" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:id="@+id/ivGiftBox2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="123dp"
                android:src="@drawable/giftbox" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:id="@+id/ivGiftBox3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="183dp"
                android:src="@drawable/giftbox" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:id="@+id/ivGiftBox4"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="243dp"
                android:src="@drawable/giftbox" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:id="@+id/ivGiftBox5"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="303dp"
                android:src="@drawable/giftbox" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/frameLayout">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar_bg" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/clip_source" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_below="@+id/frameLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="6dp"
            android:id="@+id/relativeLayout4"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0°"
                android:id="@+id/tvCl0dg"
                android:textSize="11dp"
                android:layout_marginLeft="9dp"
                android:textColor="#c7c8c8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20°"
                android:id="@+id/tvCl20dg"
                android:layout_marginLeft="65dp"
                android:textSize="11dp"
                android:textColor="#c7c8c8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40°"
                android:id="@+id/tvCl40dg"
                android:layout_marginLeft="125dp"
                android:textSize="11dp"
                android:textColor="#c7c8c8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60°"
                android:id="@+id/tvCl60dg"
                android:layout_marginLeft="185dp"
                android:textSize="11dp"
                android:textColor="#c7c8c8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80°"
                android:id="@+id/tvCl80dg"
                android:layout_marginLeft="245dp"
                android:textSize="11dp"
                android:textColor="#c7c8c8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100°"
                android:id="@+id/tvCl100dg"
                android:layout_marginLeft="299dp"
                android:textSize="11dp"
                android:textColor="#c7c8c8" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:id="@+id/relativeLayout5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 보상"
                android:id="@+id/tvClNext"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="14dp"
                android:textColor="#1bbbbf"
                android:layout_marginLeft="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/relativeLayout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="말투"
                android:id="@+id/tvClGift"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:alpha="51" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="말투"
                android:id="@+id/tvClGiftTitle"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:alpha="51" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/relativeLayout6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#b1b2c1"
            android:id="@+id/relativeLayout7"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout7"
            android:background="#ffffff"
            android:layout_marginBottom="13dp">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lvGiftEx"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:dividerHeight="8dp"
                android:divider="#ffffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:id="@+id/rlthemeEx"></RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
