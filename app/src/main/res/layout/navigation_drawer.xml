<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    >


        <RelativeLayout
            android:id="@+id/navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#FFFFFF"
            >
            <TextClock
                android:id="@+id/currentTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#00BBC0"/>
            <TextView
                android:id="@+id/friend_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HETT"
                android:padding="10dp"
                android:background="#00BBC0"
                android:layout_below="@id/currentTimer"
                />
            <Button
                android:id="@+id/friend_name_edit_btn"
                android:layout_width="33dp"
                android:layout_height="38dp"
                android:layout_alignRight="@id/friend_edit"
                android:layout_alignBaseline="@id/friend_edit"
                android:text="edit"
                />
            <ListView
                android:id="@+id/friendAskListView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_below="@id/friend_edit"
                android:divider="#00BBC0"
                />
            <LinearLayout
                android:id="@+id/friendNoLinerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/friendAskListView"
                android:orientation="horizontal"
                android:background="#FFFFFF">
                <TextView
                    android:id="@+id/friendlyNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text=" 74°"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="64"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="03"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/friendNoDescriptionLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/friendNoLinerLayout"
                android:orientation="horizontal"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="친밀도"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="완료일정"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="반복일정"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/completeSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료 일정"
                android:layout_below="@id/friendNoDescriptionLinearLayout"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DADADA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/completeSchedule"
                />
            <TextView
                android:id="@+id/againSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반복 일정"
                android:layout_below="@id/completeSchedule"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DADADA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/againSchedule"
                />
            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:layout_below="@id/againSchedule"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DADADA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/setting"
                />
            <TextView
                android:id="@+id/shakeBell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진동 알람"
                android:layout_below="@id/setting"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DADADA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/shakeBell"
                />
            <ToggleButton
                android:id="@+id/shakeBellToggleButton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/shakeBell"
                android:layout_margin="10dp"

                />
            <TextView
                android:id="@+id/messageMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메세지 모드"
                android:layout_below="@id/shakeBell"
                android:layout_margin="10dp"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DADADA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/messageMode"
                />
            <ToggleButton
                android:id="@+id/messageModeToggleButton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/messageMode"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/backgroundTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배경 테마"
                android:layout_below="@id/messageMode"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DADADA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/backgroundTheme"
                />
            <TextView
                android:id="@+id/setBackgroundTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기본 >"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/backgroundTheme"
                android:layout_margin="10dp"
                android:paddingRight="10dp"
                />
        </RelativeLayout>


</android.support.v4.widget.DrawerLayout>