<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/hatt_white"
    android:descendantFocusability="blocksDescendants"
    android:clickable="false"
    android:focusable="false"
    >

    <ImageView
        android:id="@+id/borderline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/hatt_background"
        >
    </ImageView>

    <RelativeLayout
        android:layout_below="@id/borderline"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <ImageView
            android:id="@+id/nextButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/next"
            />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/starButton"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/star_off"
            />

        <ImageView
            android:id="@+id/orderButton"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/order"
            android:visibility="invisible"
            />


        <LinearLayout
            android:id="@+id/border_line_extender1"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/finishLine1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@id/border_line_extender1"
            android:layout_alignBottom="@id/border_line_extender1"
            android:layout_alignLeft="@id/border_line_extender1"
            android:layout_alignRight="@id/border_line_extender1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="invisible"
            android:src="@drawable/finish_line_1"
            android:scaleType="fitXY" />


        <LinearLayout
            android:id="@+id/border_line_extender2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/finishLine2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@id/border_line_extender2"
            android:layout_alignBottom="@id/border_line_extender2"
            android:layout_alignLeft="@id/border_line_extender2"
            android:layout_alignRight="@id/border_line_extender2"
            android:visibility="invisible"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/finish_line_2"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/memoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/nextButton"
            android:paddingLeft="5dp"
            android:textSize="14dp"
            android:layout_toRightOf="@id/starButton"
            android:layout_centerVertical="true"
            android:textColor="@color/hatt_memocolor"
            />

    </RelativeLayout>


</RelativeLayout>
