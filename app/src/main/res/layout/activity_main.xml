<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    >
<com.teambulldozer.hett.SoftKeyboardLsnedRelativeLayout

    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hatt_background"
    >


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >

        <ImageView
            android:id="@+id/friendBtn"
            android:layout_marginLeft="12dp"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/menu"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/editMenu"
            />

        <TextView
            android:id="@+id/editMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:padding="12dp"
            android:textColor="@color/hatt_edit"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="편집"
            />

        <TextView
            android:id="@+id/finishMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:padding="12dp"
            android:textColor="@color/hatt_edit"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="완료"
            android:visibility="invisible"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/dateBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hatt_date"
            android:textSize="22dp"
            android:text="날짜정보"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/todayBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hatt_date"
            android:textSize="22dp"
            android:text="오늘 할 일"
            />


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/hatt_cyan"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/memoInput"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:background="@color/hatt_edittextWindow"
            android:hint="@string/addanewtask"
            android:paddingLeft="24dp"
            android:textSize="15dp"
            android:textColor="@color/hatt_turquoise_opacity100"
            android:focusableInTouchMode="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:id="@+id/addButton"
            android:layout_width="51dp"
            android:layout_height="41dp"
            android:text="입력"

            android:gravity="center"
            android:textColor="@color/hatt_white"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/memoInput"
            android:layout_alignTop="@+id/memoInput"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/addLine"
            android:src="@drawable/line"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:visibility="invisible"
            />

    </RelativeLayout>


    <ListView
        android:id="@+id/lv1"
        android:layout_marginTop="137dp"
        android:layout_above="@id/rl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"

        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false"

        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        >

    </ListView>

    <TextView
        android:id="@+id/deleteAllButton"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="전체 삭제 하기"
        android:textSize="16dp"
        android:textColor="@color/hatt_white"
        android:background="@color/hatt_cyan"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        />

</com.teambulldozer.hett.SoftKeyboardLsnedRelativeLayout>
    <RelativeLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="left">

        <TextClock
            android:id="@+id/currentTimer"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="24dp"
            android:paddingTop="24dp"
            android:background="#1bbbbf"/>
        <TextView
            android:id="@+id/friend_edit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Hatti"
            android:paddingLeft="36dp"
            android:textSize="19sp"
            android:background="#1bbbbf"
            android:layout_below="@id/currentTimer"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/friend_name_edit_btn"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginRight="12dp"
            android:paddingBottom="25dp"
            android:layout_below="@id/currentTimer"
            android:layout_alignRight="@id/friend_edit"

            android:src="@drawable/friend_setting"
            />
        <ListView
            android:id="@+id/friendAskListView"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/friend_edit"
            android:divider="#00BBC0"
            android:background="#1bbbbf"
            />
        <LinearLayout
            android:id="@+id/friendNoLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/friendAskListView"
            android:orientation="horizontal"
            android:background="#1bbbbf"
            android:paddingTop="16dp"
            >
            <TextView
                android:id="@+id/friendlyNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="74"
                android:textSize="22.5sp"
                android:textColor="#ededed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:textSize="22.5sp"
                android:text="64"
                android:textColor="#ededed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:textSize="22.5sp"
                android:text="03"
                android:textColor="#ededed"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/friendNoDescriptionLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/friendNoLinerLayout"
            android:orientation="horizontal"
            android:background="#1bbbbf"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="친밀도"
                android:textSize="11sp"
                android:textColor="#ededed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="완료일정"
                android:textSize="11sp"
                android:textColor="#ededed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="반복일정"
                android:textSize="11sp"
                android:textColor="#ededed"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/myFriendNo"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="내 친밀도"
            android:layout_below="@id/friendNoDescriptionLinearLayout"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/myFriendNo"
            />
        <TextView
            android:id="@+id/completeSchedule"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="완료 일정"
            android:layout_below="@id/myFriendNo"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/completeSchedule"
            />
        <TextView
            android:id="@+id/againSchedule"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="반복 일정"
            android:layout_below="@id/completeSchedule"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/againSchedule"
            />
        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="설정"
            android:layout_below="@id/againSchedule"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/setting"
            />
        <TextView
            android:id="@+id/noBellMode"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="무음 모드"
            android:layout_below="@id/setting"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/noBellMode"
            />
        <ToggleButton
            android:id="@+id/shakeBellToggleButton"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/setting"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"

            />
        <TextView
            android:id="@+id/pushAlarm"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="푸쉬 알람"
            android:layout_below="@id/noBellMode"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"

            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/pushAlarm"
            />
        <ToggleButton
            android:id="@+id/messageModeToggleButton"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shakeBellToggleButton"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="배경 테마"
            android:layout_below="@id/pushAlarm"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DADADA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/backgroundTheme"
            />

        <ImageView
            android:id="@+id/backgroundThemeRightButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/backgroundTheme"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/next"
            />
        <TextView
            android:id="@+id/setBackgroundTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본"
            android:textSize="15sp"
            android:layout_alignBaseline="@id/backgroundTheme"
            android:layout_toLeftOf="@id/backgroundThemeRightButton"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"



            />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>