<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/backgroundThemeName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:textColor="#585858"
        android:gravity="center_vertical"
        android:textSize="14sp"
        />
    <ImageView
        android:id="@+id/backgroundThemeOpenStatus"
        android:layout_width="11dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:paddingTop="21.5dp"
        android:paddingBottom="21.5dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/lock"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:id="@+id/selectedBackgroundTheme"
        android:layout_below="@id/backgroundThemeName"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="gone"
        />

</RelativeLayout>
